---
import Card from '../components/Card.astro';
import Navbar from '../components/NavBar.astro'; 
import Header from '../components/Header.astro';
import '../styles/global.css'; 

const pageTitle = 'Home';
const navbarLinks = [
  { href: '/', label: 'Home' },
  { href: '/Projects', label: 'Projects' },
  { href: '/Learningoutcome', label: 'Learning Outcome' },
  { href: '/contact', label: 'Contact' },
];
---

<html lang="en">
  <head>
    <title>{pageTitle}</title>
  </head>
  <body>
    <Navbar links={navbarLinks} />
    <Header title="Welcome to my portfolio!" />
    <main class="grid-container">
      <div class="grid-item">
        <Card
          title="Card Title 1"
          description="Project 1"
          imageUrl="../images/image1.jpg"
          imageAlt="Image 1 description"
        />
      </div>
      <div class="grid-item">
        <Card
          title="Card Title 2"
          description="This is the description of the second card."
          imageUrl="/images/image2.jpg"
          imageAlt="Image 2 description"
        />
      </div>
      <div class="grid-item">
        <Card
          title="Card Title 3"
          description="This is the description of the third card."
          imageUrl="/images/image3.jpg"
          imageAlt="Image 3 description"
        />
      </div>
      <div class="grid-item">
        <Card
          title="Card Title 4"
          description="This is the description of the fourth card."
          imageUrl="/images/image4.jpg"
          imageAlt="Image 4 description"
        />
      </div>
      <a href="../assets/FastForward.pdf" class="button">View all projects</a>
    </main>
    
  </body>
</html>
