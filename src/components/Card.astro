--- 
// This is where we define props for the component
export interface Props {
  title: string;
  description: string;
  imageUrl: string;
  imageAlt: string;
}

const { title, description, imageUrl, imageAlt } = Astro.props;
---

<div class="card">
  <img src={imageUrl} alt={imageAlt} class="card-image" />
  <h1>{title}</h1>
  <p>{description}</p>
</div>

<style>
  .card {
    border: 1px solid #ccc;
    padding: 16px;
    border-radius: 8px;
    max-width: 500px;
    height: 200px;
    text-align: center;
  }

  .card-image {
    width: 100%;
    height: auto;
    border-radius: 4px;
  }

  h1 {
    font-size: 1.5rem;
    margin-top: 8px;
  }

  p {
    font-size: 1rem;
    margin-top: 8px;
  }
</style>
